<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>首页</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
   
    <link rel="stylesheet" type="text/css" href="libs/weui/css/weui.css">
    <link rel="stylesheet" type="text/css" href="libs/weui/css/jquery-weui.css">
    <link rel="stylesheet" type="text/css" href="./css/app.css">
    
    <script src="libs/weui/js/jquery-2.1.4.js" type="text/javascript"></script>
    <script src="libs/weui/js/fastclick.js" type="text/javascript"></script>
    <script src="libs/weui/js/jquery-weui.min.js" type="text/javascript"></script>
    <script src="libs/weui/js/swiper.min.js" type="text/javascript"></script>

</head>
<body>
   <section class="wrap">
       <!-- header start -->
        <section class="header flex justify-b padding1">
            
            <!-- logo start-->
            <a href="#" class="item-c">
                <img src="images/logo.png" class="logo" alt="">
            </a>
            <!-- logo end-->

            <!-- login start -->
            <a href="#" class="item-c user"></a>
            <!-- login end -->
            
        </section>
        <!-- header end -->

        <!-- content start -->
        <section class="content">

           <!-- nav start --> 
           <ul class="nav flex">
               <li class="">
                   <a href="#" class="b-right">首页</a>
               </li>
               <li class="">
                   <a href="#" class="b-right">运价查询</a>
               </li>
               <li>
                   <a href="#" class="">特价推荐</a>
               </li>
           </ul> 
           <!-- nav end --> 

           <!-- content-body start -->
           <section class="content-body">
               <!-- swiper start -->
               <section class="swiper-container">
                  <!-- Additional required wrapper -->

                  <section class="swiper-wrapper">
                        <!-- Slides -->
                        <section class="swiper-slide"><img src="./images/banner.png" /></section>
                        <section class="swiper-slide"><img src="./images/banner.png" /></section>
                        <section class="swiper-slide"><img src="./images/banner.png" /></section>

                  </section>

                  <!-- If we need pagination -->
                  <section class="swiper-pagination"></section>

                </section>
                <!-- swiper start -->

                <!-- index start -->
                <section class="flex justify-b select-nav padding1">

                   <section class="air-box shrink air">
                       <section class="level-one">空运查询</section>
                       <section class="level-two">Airfreight inquiry</section>
                   </section>

                   <section class="ocean-box shrink ocean">
                       <section class="level-one">海运查询</section>
                       <section class="level-two">Marine inquiry</section>
                   </section>

                </section>
                <!-- index start -->

           </section>
           <!-- content-body end -->

        </section>
        <!-- content end -->
   </section>
   <script  type="text/javascript">
        $(function() {
            var html = document.documentElement;
            html.style.fontSize = html.getBoundingClientRect().width / 16 + 'px';

            FastClick.attach(document.body);

            $(".swiper-container").swiper({
                loop: true,
                autoplay: 3000
            });
        });
   </script>
</body>
</html>