@import './_mixin';
html{
    font-size: 62.5%;
    height: 100%;
}
html,body,div,h1,h3,h4,h5,h6,section,p,ul,li,input,textarea,select,a,em,span,strong{
    margin:0;
    padding: 0;
}

body{
    font-size: 0.5rem;
    line-height: 0.6rem;
    height: 100%;
    overflow: hidden;
}
/**/
button:focus,input:focus, textarea:focus, select:focus {
    outline-offset: 0px;
}
button:focus,input:focus,textarea:focus, select:focus  {
    outline: none;
}
a{
    text-decoration: none;
}
/* flex start */

.flex{
    @include prefixDisplay(flex);
}
.flex-auto{
  -webkit-flex: 1 1 auto;
  flex: 1 1 auto;
}


.flex-column{
  flex-direction: column;
}

.grow{
  flex-grow: 1;     
}

.shrink{
  flex-shrink: 0;  
}
.inline-flex{
  display: -webkit-inline-flex;  
  display: inline-flex;
}

.items-c{
  align-items: center;
}
.items-s{
   align-items: flex-start;
}
.items-e{
   align-items: flex-end;
}


.justify-c{
  justify-content: center;
}
.justify-s{
  justify-content: flex-start;
}
.justify-e{
  justify-content: flex-end;
}

.justify-b{
  justify-content: space-between;
}


.flex-wrap{
  flex-wrap:wrap;
}

.item-c{
  align-self:center;
}
.item-s{
  align-self:flex-start;
}
.item-e{
  align-self:flex-end;
}

/* flex end */


/* reset css */
ul,li,ol,dd,dl,dt{
    margin:0;
    padding: 0;
}
li{
    list-style: none;
}
.wrap{
    height: 100%;
}
/* text start */

.t-white{
    color: white;
}
.t-center{
    text-align: center;
}
.t-right{
    text-align: right;
}
.t-orange{
    color: orange;
}
/* text end */

/* font start */
.font16{
    font-size: 16px;
}
.font14{
    font-size: 14px;
}
.font12{
    font-size: 12px;
}
/* font end */


/* form start */

.form{
    width: 100%;
}
.form-group{
    
}
.form-rows{
   width: 100%;
   padding:10px 0;
}

.form-label{
   width: 3.2rem;
}
.form-input{
   width: 100%;
   border:1px solid #ccc;
   box-sizing:border-box;
   border-radius: 0.2rem;
   padding:.45rem;
   font-size: 0.6rem;
   line-height: 0.7rem;
}
.form-submit{
    border:none;
    background:#2678ce;
    width: 100%;
    padding:.45rem 0;
    border-radius: 0.1rem;
    font-size: 0.6rem;
    line-height: 0.7rem;
    color: white; 
}

/* form end */


/* display */
.block{
    display: block;
}
.none{
    display: none;
}
.absolute{
    position: absolute;
}
.relative{
    position: relative;
}
.right{
    right: 0;
}


/* margin */
.margin38{
    margin:0 6px;
}

/* padding */
.padding1{
    padding:0 .65rem;
}
.padding5{
    padding: 0.5rem;
}
/* backgroud */
.blue{
    background:#2678ce; 
}
.shallow{
    background: #42c8dc;
}
.gray{
    background: #f5f5f5;
}

/* border */
.b-right{
    border-right: 1px solid #ccc;
}

/* height */
.height{
    height: 100%;
}
.height17{
   height: 1.75rem;
}
.scroll{
    overflow-x:hidden;
    overflow-y:scroll;  
}
/* validate start */
.errorContainer {
    position: absolute;
    background-color: rgba(0, 0, 0, 0.6);
    display: none;
    z-index: 5;
    left: 50%;
    top: 50%;
    min-width: 60%;
    text-align: center;
    color: #fff;
    font-size: 0.7rem;
    line-height: 0.9rem;
    padding:0.5rem 0;
    border-radius: .2rem;
}

.errorContainer li {
    padding: 0.5rem 0;
}
.errorContainer label{
    margin: 0;
}
/* validate start */