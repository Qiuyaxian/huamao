.air{
   background: url(../images/icon/air.png) no-repeat left center;
   background-size: cover;
}
.ocean{
   background: url(../images/icon/ocean.png) no-repeat left center;
   background-size: cover;
}
/* select-nav start */
.select-nav{
   margin-top: 1.2rem;
}
.air-box,.ocean-box{
  width: 7rem;
  height: 7rem;
  border-radius: 0.7rem;
  color:white;
}

.level-one{
  font-size: 0.8rem;
  line-height: 1.2rem;
  margin-top: 0.4rem;
  margin-left: 1rem;
}
.level-two{
  font-size: 0.4rem;
  line-height: 0.8rem;
  margin-left: 1rem;
}

/* select-nav end */



.line{
    width: 1rem;
    margin:0 .5rem;
    height: 0.08rem;
    background: white;
}
.back{
    width: 0.5rem;
    height: 1rem;
    background:white;
}
.originating,.destination{
    width: 9rem;
    font-size: 0.8rem;
    line-height: 1rem;
}
.swiper-container{
    height: 9rem;
}
.swiper-container img{
    width: 100%;
    height: 100%;
}

/* form */
.form-title{
    font-size: 0.8rem;
    line-height: 1rem;
    margin: 1.4rem 0;
}

.top{
    padding:0.5rem 0;
}

/* header */
.header-nav{
    width:100%;
    height: 4.55rem;
    position: absolute;
    left: 0;
    top:0;
}
.padding-top{
    width:100%;
    height: 100%;
    padding-top:4.55rem;
}